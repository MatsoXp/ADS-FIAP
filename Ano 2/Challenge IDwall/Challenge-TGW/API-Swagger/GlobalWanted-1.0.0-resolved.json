      "get": {
        "summary": "Buscar por Nome",
        "parameters": [
          {
            "name": "nome",
            "in": "query",
            "description": "Insira o nome",
            "required": false,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Nome encontrado na base de dados de pessoas procuradas"
          },
          "400": {
            "description": "Requisição inválida"
          },
          "404": {
            "description": "Nome não encontrado na base de dados de pessoas procuradas"
          }
        }
      }
    },
    "/registrar-pessoa": {
      "post": {
        "summary": "Registrar novo procurado na base de dados",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/registrarpessoa_body"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Registrado com sucesso na base de dados de pessoas procuradas"
          },
          "400": {
            "description": "Requisição inválida"
          },
          "401": {
            "description": "Não autorizado, o token de autenticação é inválido ou não existe"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/editar-pessoa/{nome}": {
      "put": {
        "summary": "Editar informações de uma pessoa procurada na base de dados",
        "parameters": [
          {
            "name": "nome",
            "in": "path",
            "description": "Nome",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/editarpessoa_nome_body"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Informações da pessoa atualizadas com sucesso na base de dados de pessoas procuradas"
          },
          "400": {
            "description": "Requisição inválida"
          },
          "401": {
            "description": "Não autorizado, o token de autenticação é inválido ou não existe"
          },
          "404": {
            "description": "Pessoa não encontrada na base de dados de pessoas procuradas"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/excluir-pessoa/{nome}": {
      "delete": {
        "summary": "Excluir pessoa da base de dados de pessoas procuradas",
        "parameters": [
          {
            "name": "nome",
            "in": "path",
            "description": "Nome",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Pessoa excluída com sucesso da base de dados de pessoas procuradas"
          },
          "400": {
            "description": "Requisição inválida"
          },
          "401": {
            "description": "Não autorizado, o token de autenticação é inválido ou não existe"
          },
          "404": {
            "description": "Pessoa não encontrada na base de dados"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/listar-pessoas": {
      "get": {
        "summary": "Listar todas as pessoas cadastradas na base de dados de pessoas procuradas",
