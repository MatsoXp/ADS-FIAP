        }
      }
    },
    "/filtrar-pessoas": {
      "get": {
        "summary": "Filtrar pessoas na base de dados de pessoas procuradas por idade, local de nascimento ou sexo",
        "parameters": [
          {
            "name": "idade",
            "in": "query",
            "description": "Idade",
            "required": false,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "local_nascimento",
            "in": "query",
            "description": "Local de nascimento",
            "required": false,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sexo",
            "in": "query",
            "description": "Sexo",
            "required": false,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Pessoas filtradas encontradas na base de dados de pessoas procuradas"
          },
          "400": {
            "description": "Requisição inválida"
          },
          "404": {
            "description": "Nenhuma pessoa encontrada com os critérios de filtro na base de dados de pessoas procuradas"
          }
        }
      }
    }
